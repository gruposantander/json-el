[
  {
    "name": "Equals Operator: eq",
    "tests": [
      { "exp": { "eq": "Joe" }, "value": "Joe", "pass": true },
      { "exp": { "eq": "JOE" }, "value": "Joe", "pass": true },
      { "exp": { "eq": 123 }, "value": 123, "pass": true },
      { "exp": { "eq": 123.45 }, "value": 123.45, "pass": true },
      { "exp": { "eq": null }, "value": null, "pass": true },
      { "exp": { "eq": true }, "value": true, "pass": true },
      { "exp": { "eq": false }, "value": false, "pass": true },
      { "exp": { "eq": "Joey" }, "value": "Joe", "pass": false },
      { "exp": { "eq": false }, "value": null, "pass": false },
      { "exp": { "eq": "1" }, "value": 1, "pass": false },
      { "exp": { "eq": {} }, "value": {}, "pass": false },
      { "exp": { "eq": [] }, "value": [], "pass": false }
    ]
  }, {
    "name": "Included Operator: in",
    "tests": [
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Joe", "pass": true },
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Bob", "pass": true },
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Ann", "pass": false }
    ]
  }, {
    "name": "Greater Than Operator: gt",
    "tests": [
      { "exp": { "gt": 3 }, "value": 9, "pass": true },
      { "exp": { "gt": "B" }, "value": "C", "pass": true },
      { "exp": { "gt": 10 }, "value": 10, "pass": false },
      { "exp": { "gt": "Z" }, "value": "C", "pass": false }
    ]
  }, {
    "name": "Less Than Operator: lt",
    "tests": [
      { "exp": { "lt": 10 }, "value": 9, "pass": true },
      { "exp": { "lt": "Z" }, "value": "C", "pass": true },
      { "exp": { "lt": 4 }, "value": 9, "pass": false },
      { "exp": { "lt": "C" }, "value": "C", "pass": false }
    ]
  }, {
    "name": "Greater Than or Equals Operator: gte",
    "tests": [
      { "exp": { "gte": 3 }, "value": 9, "pass": true },
      { "exp": { "gte": 9 }, "value": 9, "pass": true },
      { "exp": { "gte": "C" }, "value": "D", "pass": true },
      { "exp": { "gte": 9 }, "value": 4, "pass": false },
      { "exp": { "gte": "C" }, "value": "A", "pass": false }
    ]
  }, {
    "name": "Less Than or Equals Operator: gte",
    "tests": [
      { "exp": { "lte": 4 }, "value": 2, "pass": true },
      { "exp": { "lte": 3 }, "value": 3, "pass": true },
      { "exp": { "lte": "C" }, "value": "A", "pass": true },
      { "exp": { "lte": 1 }, "value": 2, "pass": false },
      { "exp": { "lte": "C" }, "value": "D", "pass": false }
    ]
  }, {
    "name": "Or Operator: or",
    "tests": [
      { "exp": { "or": [{ "gt": 4, "lt": 9 }, { "gt": 39, "lt": 42 }] }, "value": 5, "pass": true },
      { "exp": { "or": [{ "gt": 4, "lt": 9 }, { "gt": 39, "lt": 42 }] }, "value": 10, "pass": false }
    ]
  }, {
    "name": "Complex claims and schemas",
    "tests": [{
      "exp": { "props": { "amount" : { "gt": "1000.00" } } },
      "type": { "type": "object", "props": { "amount" : { "type": "decimal" }, "currency": { "type": "string" } } },
      "value": { "amount": "1000.01", "currency": "GBP" },
      "pass": true
    }, {
      "exp": { "props": { "amount" : { "gt": "1000.00" } } },
      "type": { "type": "object", "props": { "amount" : { "type": "decimal" }, "currency": { "type": "string" } } },
      "value": { "amount": "200.01", "currency": "GBP" },
      "pass": false
    }]
  }, {
    "name": "Some Operator: some",
    "tests": [{
      "exp": { "some": { "eq": 1 } },
      "value": [2, 3, 1],
      "pass": true
    }, {
      "exp": { "some": { "eq": 1 } },
      "value": [2, 3, 4],
      "pass": false
    }, {
      "exp": { "some": { "eq": 1 } },
      "value": [],
      "pass": false
    }]
  }, {
    "name": "Every Operator: every",
    "tests": [{
      "exp": { "every": { "eq": 1 } },
      "value": [1, 1, 1],
      "pass": true
    }, {
      "exp": { "every": { "eq": 1 } },
      "value": [],
      "pass": true
    }, {
      "exp": { "every": { "eq": 1 } },
      "value": [1, 1, 4],
      "pass": false
    }]
  }, {
    "name": "None Operator: none",
    "tests": [{
      "exp": { "none": { "eq": 1 } },
      "value": [2, 3, 5],
      "pass": true
    }, {
      "exp": { "none": { "eq": 1 } },
      "value": [],
      "pass": true
    }, {
      "exp": { "none": { "eq": 1 } },
      "value": [1, 3, 4],
      "pass": false
    }]
  }, {
    "name": "Arrays and Schemas",
    "tests": [{
      "exp": { "every": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["200.01", "1200.00"],
      "pass": true
    }, {
      "exp": { "none": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["3.01", "1.00"],
      "pass": true
    }, {
      "exp": { "some": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["1.01", "1200.00"],
      "pass": true
    }]
  }
]
