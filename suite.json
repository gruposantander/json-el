{
  "name": "Common Tests",
  "suites": [{
    "name": "Equals Operator: eq",
    "tests": [
      { "exp": { "eq": "Joe" }, "value": "Joe" },
      { "exp": { "eq": "JOE" }, "value": "Joe", "pass": false },
      { "exp": { "eq": 123 }, "value": 123 },
      { "exp": { "eq": 123.45 }, "value": 123.45 },
      { "exp": { "eq": null }, "value": null },
      { "exp": { "eq": true }, "value": true },
      { "exp": { "eq": false }, "value": false },
      { "exp": { "eq": "Joey" }, "value": "Joe", "pass": false },
      { "exp": { "eq": false }, "value": null, "pass": false },
      { "exp": { "eq": "1" }, "value": 1, "pass": false },
      { "exp": { "eq": {} }, "value": {}, "pass": false },
      { "exp": { "eq": [] }, "value": [], "pass": false }
    ]
  }, {
    "name": "Included Operator: in",
    "tests": [
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Joe" },
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Bob" },
      { "exp": { "in": ["Joe", "Bob"] }, "value": "Ann", "pass": false }
    ]
  }, {
    "name": "Greater Than Operator: gt",
    "tests": [
      { "exp": { "gt": 3 }, "value": 9 },
      { "exp": { "gt": "B" }, "value": "C" },
      { "exp": { "gt": 10 }, "value": 10, "pass": false },
      { "exp": { "gt": "Z" }, "value": "C", "pass": false }
    ]
  }, {
    "name": "Less Than Operator: lt",
    "tests": [
      { "exp": { "lt": 10 }, "value": 9 },
      { "exp": { "lt": "Z" }, "value": "C" },
      { "exp": { "lt": 4 }, "value": 9, "pass": false },
      { "exp": { "lt": "C" }, "value": "C", "pass": false }
    ]
  }, {
    "name": "Greater Than or Equals Operator: gte",
    "tests": [
      { "exp": { "gte": 3 }, "value": 9 },
      { "exp": { "gte": 9 }, "value": 9 },
      { "exp": { "gte": "C" }, "value": "D" },
      { "exp": { "gte": 9 }, "value": 4, "pass": false },
      { "exp": { "gte": "C" }, "value": "A", "pass": false }
    ]
  }, {
    "name": "Less Than or Equals Operator: gte",
    "tests": [
      { "exp": { "lte": 4 }, "value": 2 },
      { "exp": { "lte": 3 }, "value": 3 },
      { "exp": { "lte": "C" }, "value": "A" },
      { "exp": { "lte": 1 }, "value": 2, "pass": false },
      { "exp": { "lte": "C" }, "value": "D", "pass": false }
    ]
  }, {
    "name": "Or Operator: or",
    "tests": [
      { "exp": { "or": [{ "gt": 4, "lt": 9 }, { "gt": 39, "lt": 42 }] }, "value": 5 },
      { "exp": { "or": [{ "gt": 4, "lt": 9 }, { "gt": 39, "lt": 42 }] }, "value": 10, "pass": false }
    ]
  }, {
    "name": "decimal type",
    "tests": [
      { "exp": { "eq": "123.0" }, "type": { "type": "decimal" }, "value": "123" },
      { "exp": { "gt": "99.00" }, "type": { "type": "decimal" }, "value": "100.00" },
      { "exp": { "gt": "100.00" }, "type": { "type": "decimal" }, "value": "99.00", "pass": false}
    ]
  }, {
    "name": "date type",
    "tests": [
      { "exp": { "eq" : 12 }, "type": { "type": "number" }, "value": 12 }
    ]
  }, {
    "name": "number type",
    "tests": [
      { "exp": { "eq" : 12 }, "type": { "type": "number" }, "value": 12 }
    ]
  }, {
    "name": "Complex claims and schemas",
    "tests": [{
      "exp": { "props": { "amount" : { "gt": "1000.00" } } },
      "type": {
        "type": "object",
        "props": {
          "amount" : { "type": "decimal" },
          "currency": { "type": "string" }
        }
      },
      "value": { "amount": "1000.01", "currency": "GBP" }
    }, {
      "exp": { "props": { "amount" : { "gt": "1000.00" } } },
      "type": {
        "type": "object",
        "props": {
          "amount" : { "type": "decimal" },
          "currency": { "type": "string" }
        }
      },
      "value": { "amount": "200.01", "currency": "GBP" },
      "pass": false
    }]
  }, {
    "name": "Some Operator: some",
    "tests": [
      { "exp": { "some": { "eq": 1 } }, "value": [2, 3, 1] },
      { "exp": { "some": { "eq": 1 } }, "value": [2, 3, 4], "pass": false },
      { "exp": { "some": { "eq": 1 } }, "value": [], "pass": false }
    ]
  }, {
    "name": "Every Operator: every",
    "tests": [
      { "exp": { "every": { "eq": 1 } }, "value": [1, 1, 1] },
      { "exp": { "every": { "eq": 1 } }, "value": [] },
      { "exp": { "every": { "eq": 1 } }, "value": [1, 1, 4], "pass": false }
    ]
  }, {
    "name": "None Operator: none",
    "tests": [
      { "exp": { "none": { "eq": 1 } }, "value": [2, 3, 5] },
      { "exp": { "none": { "eq": 1 } }, "value": [] },
      { "exp": { "none": { "eq": 1 } }, "value": [1, 3, 4], "pass": false }
    ]
  }, {
    "name": "Arrays and Schemas",
    "tests": [{
      "exp": { "every": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["200.01", "1200.00"]
    }, {
      "exp": { "none": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["3.01", "1.00"]
    }, {
      "exp": { "some": { "gt": "200.00" } },
      "type": { "type": "array", "items": { "type": "decimal" } },
      "value": ["1.01", "1200.00"]
    }]
  }]
}
